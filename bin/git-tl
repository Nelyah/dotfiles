#! /bin/bash

nb_lines=10
args=()

while (( $# > 0 )); do
    if grep -E "^[0-9]+$" <<< "$1" &> /dev/null; then
        nb_lines=$( tr -d '-' <<< "$1")
    else
        args+=( "$1" )
    fi
    shift
done

[[ "${#args[@]}" == 0 ]] && args+=( HEAD )

git log -${nb_lines} \
    --abbrev-commit \
    --decorate \
    --graph \
    "${args[@]}"
