#! /bin/bash

nb_lines=10
args=()

while (( $# > 0 )); do
    if grep -E "^[0-9]+$" <<< "$1" &> /dev/null; then
        nb_lines=$( tr -d '-' <<< "$1")
    else
        args+=( "$1" )
    fi
    shift
done

[[ "${#args[@]}" == 0 ]] && args+=( HEAD )

git log -${nb_lines} \
    --abbrev-commit \
    --date=format:'%Y-%m-%d %H:%I:%S' \
    --decorate \
    --graph \
    --format=format:'%C(03)%>|(5)%h%C(reset)  %C(04)%cd%C(reset)  %C(green)%<(20,trunc)%an%C(reset) %>|(1)%s%C(reset) %C(auto)%d%C(reset)' \
    "${args[@]}"
