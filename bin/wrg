#!/usr/bin/env bash

black="\033[0;30m"
red="\033[0;31m"
green="\033[0;32m"
orange="\033[0;33m"
blue="\033[0;34m"
purple="\033[0;35m"
cyan="\033[0;36m"
light_gray="\033[0;37m"
dark_gray="\033[1;30m"
light_red="\033[1;31m"
light_green="\033[1;32m"
yellow="\033[1;33m"
light_blue="\033[1;34m"
light_purple="\033[1;35m"
light_cyan="\033[1;36m"
white="\033[1;37m"
reset='\033[0m'

declare -a list_args=()
replace_value=''
do_patch=''
no_confirm=''
while (( $# > 0 )); do
    case "$1" in
        --replace)
            replace_value="$2"
            shift 2
            ;;
        -y|--yes)
            no_confirm=yes
            shift
            ;;
        *)
            list_args+=( "$1" )
            shift
            ;;
    esac
done

if test -z "$replace_value"; then
    echo 'You must specify the --replace argument!'
    exit 1
fi


tmp_repl=$(mktemp)
tmp_no_repl=$(mktemp)
cleanup() { local RET=$?; rm -f "$tmp_no_repl" "$tmp_repl" ; exit $RET; }
trap cleanup EXIT INT TERM HUP ERR

{
    rg --with-filename -n --no-heading --color=never "${list_args[@]}" | \
        sed -r 's/^([^:]+):([[0-9]+):(.*)/\1\t\2\t\3/'  > "$tmp_no_repl" &
    rg --replace "$replace_value" --with-filename -n --no-heading --color=never "${list_args[@]}" | \
        sed -r 's/^([^:]+):([[0-9]+):(.*)/\1\t\2\t\3/'  > "$tmp_repl" &
    wait
} 2> /dev/null

if [ -z "$no_confirm" ]; then
    paste "$tmp_no_repl" "$tmp_repl" | \
        while IFS=$'\t' read -r file1 line_num1 no_replace file2 line_num2 replace; do
            printf "${file1}:${line_num1}:\t${red}${no_replace}${reset}\n${file1}:${line_num1}:\t${green}${replace}${reset}\n\n"
        done

    IFS=$'\n yY' read -p "Apply those changes? [yN] " -n 1 -r
    printf "\n"
    [[ $REPLY =~ ^([Yy]|yes)$ ]] && apply_changes=yes
fi

if [[ -n "$no_confirm" ]] || [[ -n "$apply_changes" ]]; then
    paste "$tmp_no_repl" "$tmp_repl" | \
        while IFS=$'\t' read -r file1 line_num1 no_replace file2 line_num2 replace; do
            [[ $(uname) == "Linux" ]] && sed -i "${line_num1}s/^.*$/${replace}/" $file1 || sed -i '' "${line_num1}s/^.*$/${replace}/" $file1
        done
fi
