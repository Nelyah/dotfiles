#! /usr/bin/env bash

files=()
top_first=10
while (( "$#" > 0 )); do
    if [ -e "$1" ]; then
        files+=( "$1" )
    elif grep -E "^[0-9]+$" <<< "$1" &> /dev/null; then
        top_first="$1"
    else
        args+=( "$1" )
    fi
    shift
done

git log --pretty="format:%an <%ae>" "${args[@]}" -- "${files[@]}" \
    | sort \
    | uniq -c \
    | sort -nr \
    | head -"$top_first"
