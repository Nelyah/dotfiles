#!/bin/bash

function pac(){
    SOFT_MANAGER=yay
    case $1 in
        update|up )
            shift
            $SOFT_MANAGER -Syu $@
        ;;
        install|ins ) 
            shift
            $SOFT_MANAGER -S $@
        ;;
        remove|rm )
            shift
            $SOFT_MANAGER -Rs $@
        ;;
        search|se )
            shift
            $SOFT_MANAGER -Ss $@
        ;;
        *)
            $SOFT_MANAGER $@
        ;;
    esac
}

pac $*
