#! /bin/bash

nb_lines=10
args=()

while (($# > 0)); do
	if grep -E "^-?[0-9]+$" <<<"$1" &>/dev/null; then
		nb_lines=$(tr -d '-' <<<"$1")
	else
		args+=("$1")
	fi
	shift
done

if hash exa &>/dev/null; then
	exa --color=always --long --sort=modified --reverse "${args[@]}" | head -"$nb_lines"
else
	ls -lhtG --color=always --time-style=long-iso "${args[@]}" | head -"$nb_lines"
fi
